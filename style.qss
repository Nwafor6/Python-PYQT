QWidget {
    background-color: #f0f0f0;
    font-family: Arial;
    font-size: 14px;
}


QLineEdit {
    border: 2px solid #ccc;
    padding: 5px;
    font-size: 14px;
    border-radius: 5px;
}


QPushButton {
    background-color: #0078d7;
    color: white;
    border-radius: 5px;
    padding: 5px;
}

QPushButton:hover {
    background-color: #005bb5;
}

QPushButton:focus {
    background-color: white;
    color: #000000
}
